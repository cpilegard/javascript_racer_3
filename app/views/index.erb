<div class="container">
  <form action='/new' method='post'>
    Player 1 name:<input type='text' name='player1'>
    <br>
    Player 2 name:<input type='text' name='player2'>
    <input type='submit'>
  </form>
  <h3>Key control:</h3>
  <div>Player 1: "a"</div>
  <br>
  <div>Player 2: "z"</div>

  <div>
    <% if session[:errors] %>
      <% session[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>

    <% session[:errors] = nil %>
  </div>
</div>
